{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "build",
    "allowJs": false,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "lib": ["es2019"],
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/server/abi/*.json"
  ],
  "rootDirs": [
    "src",
    "test",
  ]
}
